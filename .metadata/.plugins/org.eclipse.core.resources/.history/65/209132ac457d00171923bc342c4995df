#ifndef LINKEDLIST_H_
#define LINKEDLIST_H_

#include <iostream>
#include "Node.h"
using namespace std;

template <class T>
class LinkedList{
public:
	Node<T> *head;
	Node<T> *tail;
	LinkedList(void);
	LinkedList(Node<T>*);
	LinkedList(const LinkedList<T>&);
	void insertTail(T);
	void insertHead(T);
	LinkedList& operator=(const LinkedList&);
	//void print();
	~LinkedList(void);
	friend ostream& operator<<(ostream&,const LinkedList<T>&);
private:
	void addNode(Node<T> data);

};



#endif /* LINKEDLIST_H_ */
